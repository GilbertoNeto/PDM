<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:id="@+id/layoutResultado"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.gilbertoneto.arrochagame.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bem vindo ao jogo do Arrocha"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/tvMainTentativas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="VocÃª tem um total de 8 tentativas"
            android:layout_weight="1"
            android:textSize="20dp"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center">

    <EditText
        android:id="@+id/etMainNumero"
        android:hint="Digite um valor entre 1 e 100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        />

</LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/btMainChute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chutar" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tvMainTexto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="20dp"
            android:gravity="center"
            />

    </LinearLayout>
    



</LinearLayout>
